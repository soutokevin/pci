<!-- Page part 01 -->
<% page_part(page, 'Banner').contents.each do |content| %>
  <section class="hero hero--engineering" 
    style="background-image: url( <%= content.avatar.fullpath %> );">
    <div class="hero__title"> <%= content.title %> </div>
    <div class="hero__text">
      <%= content.body %>
    </div>
  </section>
<% end %>
<% if user_signed_in? %>
  <%= link_to 'Editar Banner',
    page_page_part_path(page, page_part(page, 'Banner')) 
  %>
<% end %>

<!-- Page part 02 -->
<%= render 'layouts/accordion', component: 'engineering',
                                title: 'ARQUITETURA',
                                section: page_part(page, 'Arquitetura') %>

