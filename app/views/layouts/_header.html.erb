<header class="header">
	<%= link_to root_path, class: "logo" do %>
		<%= image_tag("Logotipo PCI - horizontal.svg", size: "210x100", alt: "PCI") %>
	<% end %>
	<div class="item"><a href="#sobre a pci">SOBRE A PCI</a></div>
	<div class="item">
		<a href="#mej">
			MOVIMENTO <br> EMPRESA JÚNIOR
		</a>
	</div>
	<div class="item"> <a href="#contato">CONTATO</a></div>
	<div class="buscador item">

	<gcse:searchbox-only></gcse:searchbox-only>

	</div>

  <!-- Menu Hamburguer -->
  <div class="mobile-nav">
    <div class="menu-btn" id="menu-btn">
      <div></div>
      <span></span>
      <span></span>
      <span></span>
    </div>

    <div class="responsive-menu">
      <ul>
        <%= link_to "#" do  %>
          <li>SOBRE A PCI</li>
        <% end %>

        <%= link_to "#" do %>
          <li>MOVIMENTO EMPRESA JÚNIOR</li>
        <% end %>

        <%= link_to "#" do %>
          <li>CONTATO</li>
        <% end %>

        <li class="buscador-mobile" style="padding: 0.5em 1em;">
					<gcse:searchbox-only></gcse:searchbox-only>
				</li>

        <div class="secundary-items">
            
          <% if page_clients? @page %>
          	<%= render 'layouts/hamburguer_sub_items', 
          							items: clients = { 
          								'#servicos' => "SERVIÇOS", 
                          '#partners' => "QUEM CONFIA NA GENTE" } %>
          <% end %>

          <% if page_student? @page %>
          	<%= render 'layouts/hamburguer_sub_items', 
          							items: students = {
          								'#areas de atuacao' => "ÁREAS DE ATUAÇÃO", 
                          '#quem passou por aqui' => "QUEM PASSOU POR AQUI",
                          '#processo seletivo' => "PROCESSO SELETIVO" } %>
          <% end %>

        </div><!-- ./secundary-items -->
      </ul>
    </div> <!-- ./responsive-menu -->
  </div> <!-- ./mobile-nav -->
</header>

