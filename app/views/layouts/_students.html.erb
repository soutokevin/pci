<%= render 'layouts/sub_header', 
            items: clients = { '#areas de atuacao' => "ÁREAS DE ATUAÇÃO", 
                               '#quem passou por aqui' => "QUEM PASSOU POR AQUI",
                               '#processo seletivo' => "PROCESSO SELETIVO"} %>


<section class="section accordion container" id="areas de atuacao">
  <h2>Áreas de Atuação</h2>
  <div class="separator"></div>
  <% if user_signed_in? %>
    <%= link_to 'Editar Seção', page_page_part_path(page, page_part( page, 'Áreas de atuação')) %>
  <% end %>
  <div class="atuacao section__wrapper">
  <!-- Page Part 01 -->  
  <% page_part(page, 'Áreas de atuação').contents.each do |content| %>
    <div class="accordion__card" style=" background-image: url( http://res.cloudinary.com/pcicloud/image/upload/<%= content.avatar.path %> ); ">
      <h3><%= content.title %></h3>
      <p> <%= content.body %> </p>
    </div>
  <% end %>

  </div>
</section>

<section class="section section--quotes" id="quem passou por aqui">
  <div class="container">
    <h2>Quem Passou por Aqui</h2>
    <div class="separator"></div>
    <% if user_signed_in? %>
      <%= link_to 'Editar Seção', page_page_part_path(page, page_part( page, 'Quem passou por aqui')) %>
    <% end %>
    <div class="section__wrapper">
    <!-- Page Part 02 -->
    <% page_part(page, 'Quem passou por aqui').contents.each do |content| %>
      <div class="section__item">
        <%= cl_image_tag( content.avatar.path, size: "128x128", alt: "PCI") %>
        <p class="section__quote"> <%= content.body %> </p>
      </div>
    <% end %>
    </div>

    <div class="section__wrapper">
      <!-- Page Part 03 -->
      <% page_part(page, 'Citação').contents.each do |content| %>
        <p class="section__big-quote"> <%= content.body %> </p>
      <% end %>
      <% if user_signed_in? %>
        <div style="text-align: center; width: 100%; margin: 20px 0">
          <%= link_to 'Editar Citações', page_page_part_path(page, page_part( page, 'Citação')) %>
        </div>
      <% end %>
      <a class="section__btn" href="#">Deixe seu depoimento</a>
    </div>
  </div>
</section>

<!-- Page Part 04 -->
<% page_part(page, 'Banner processo seletivo').contents.each do |content| %>
<section id="processo seletivo" class="section section--message" style=" background-image: url( http://res.cloudinary.com/pcicloud/image/upload/<%= content.avatar.path %> ); ">
  <div class="container">
    <h1><%= content.title %></h1>
    <p><%= content.body%></p>
  </div>
</section>
<% end %>
<% if user_signed_in? %>
  <%= link_to 'Editar Banner', page_page_part_path(page, page_part( page, 'Banner processo seletivo')) %>
<% end %>
<%= render 'layouts/candidates_form', component: 'form-alunos' %>
