<section class="container section carousel">
  <div class="carousel__title carousel__title--<%= component %>">
    Projetos Anteriores
  </div>
  <hr class="sep sep--<%= component %>">
  <div style="color: black">
  <% if user_signed_in? %>
    <%= link_to 'Editar Slides', page_page_part_path(slides.page_id, slides  ) %>
  <% end %>
  </div>
  <div class="carousel__wrapper">
    <svg class="carousel__prev" width="39" height="78" xmlns="http://www.w3.org/2000/svg" version="1.1">
      <polyline points="30 6 6 39 30 72" stroke="white" stroke-width="6"
        fill="none" stroke-linejoin="miter"/>
    </svg>
    <svg class="carousel__next" width="39" height="78" xmlns="http://www.w3.org/2000/svg" version="1.1">
      <polyline points="6 6 30 39 6 72" stroke="white" stroke-width="6"
        fill="none" stroke-linejoin="miter"/>
    </svg>
    <ul class="carousel__controls">
      <% slides.contents.each_with_index do |content, i| %>
        <li class="carousel__control <%= i == 0 ? 'carousel__control--active' : '' %> ">
          <%= i %>
        </li>
      <% end %>
    </ul>

    <% slides.contents.each_with_index do |content, index| %>
      <div
        id="modal"
        class="carousel__slide <%= index == 0 ? 'carousel__slide--active' : '' %>"
        style="background-image: url(<%= content.photos[0].fullpath %>  )"
        data-modal="<%= content.id %>"
      >
        <div class="hero__title">
          <%= content.title %>
        </div>

        <div class="hero__text" style="height: 120px; overflow: hidden;">
          <%= content.body %>
        </div>
        <span>. . .</span>
        <div style="padding-top: 30px;">
          CLIQUE PARA SABER MAIS
        </div>
      </div>
    <% end %>
  </div>
</section>
