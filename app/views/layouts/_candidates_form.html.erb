<section class= "<%= component %>" >
	<div class="title">
		<h2 class="text">QUER ENTRAR PARA O BONDE?</h2>
		<div class="line"></div>
	</div>

	<%= form_for :record, :html => {:class => 'form'} do |f| %>

		<div class="box-left">
			<div class="input-group">
				<%= f.label :nome, "NOME"  %>
				<%= f.text_field :name, class: "text-field" %>
			</div>
			<div class="input-group">
				<%= f.label :email, "EMAIL" %>
				<%= f.text_field :email, class: "text-field" %>
			</div>
			<div class="input-group">
				<%= f.label :phone, "TELEFONE" %>
				<%= f.text_field :phone, class: "text-field" %>
			</div>
		</div>
		<div class="box-right">
			<%= f.label :description, "QUER ENTRAR PARA O BONDE?" %>
			<%= f.text_area :description, placeholder: "QUER ENTRAR PARA O BONDE?", class: "textarea" %>
			<%= f.text_area :description, class: "textarea textarea-small" %>
		</div>
		<div class="submit-box">
			<%= button_tag( :class => "submit-button") do %>
				<span>ENVIAR</span>
  			<i class="fa fa-2x  fa-check" aria-hidden="true"></i>
  		<% end %>
		</div>
	<% end %>
</section>
