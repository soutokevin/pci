<section class="user container">
  <% if user_signed_in? %>
    <div style="display: flex; justify-content: space-between;">
      <%= link_to 'Editar banner clientes', 
          page_page_part_path(page, page_part( page, 'Box Clientes')) 
      %>
      <%= link_to 'Editar banner alunos',
          page_page_part_path(page, page_part( page, 'Box Alunos')) 
      %>
    </div>
  <% end %>
  <div class="user__wrapper">
    <!-- Page_part 01 -->
    <% page_part( page, 'Box Clientes').contents.each do |content| %>
        <%= link_to page_path(redirect_page('Client')), 
        {style:'background-image: url( ' +  content.avatar.fullpath + ' );', 
        class: 'user__link user__clientes'} do %>
          <h1 class="user__title"> Clientes </h1>
          <hr>
          <p> <%= content.body %> </p>
        <% end %>
    <% end %>
    <!-- Page_part 02 -->
    <% page_part( page, 'Box Alunos').contents.each do |content| %>
        <%= link_to page_path(redirect_page('Student')), 
        {style: 'background-image: url( ' +  content.avatar.fullpath + ' );',
        class: 'user__link user__alunos'} do %>
          <h1 class="user__title"> Alunos </h1>
          <hr>
          <p> <%= content.body %> </p>
        <% end %>
    <% end %>
  </div>
  <div class="user__arrow">
    <svg width="78" height="39">
      <polygon fill="#b3b3b3" points="0,0 78,0 39,39" />
    </svg>
  </div>
  
</section>

